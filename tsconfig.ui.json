{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./build/kiwi/ui/js",
    "lib": [
      "dom",
      "es2017",
      "ES2019"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./node_modules",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "./src/ui/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}