    "jsdom": "^19.0.0",
    "marked": "^4.0.10",
    "mathjax-full": "^3.0.1",
    "moment": "^2.24.0",
    "parse-css-color": "^0.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tosource": "^2.0.0-alpha.2",
    "typescript": "^4.3.5",
