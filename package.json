{
  "name": "kiwi-wiki",
  "version": "0.0.4",
  "description": "a flat file personal wiki.",
  "main": "build/boot/main.js",
  "files": [
    "build/**/*"
  ],
  "bin": {
    "kiwi": "build/boot/main.js"
  },
  "scripts": {
    "test": "npm run build && node build/boot/main.js serve ../wiki",
    "prepare": "shx rm -rf build && npm run build:core && npm run build:ui_prod",
    "build": "shx rm -rf build && npm run build:core && npm run build:ui",
    "build:core": "tsc && shx cp -r src/kiwi build/",
    "build:ui": "webpack --mode=development && shx cp -r node_modules/@uifabric/icons/fonts build/browser/uifabric-icons",
    "build:ui_prod": "webpack --mode=production && shx cp -r node_modules/@uifabric/icons/fonts build/browser/uifabric-icons",
    "build:doc": "typedoc src --out build/doc --exclude src/ui/**/*",
    "analyz": "webpack-bundle-analyzer --port 8080 build/browser/stats.json"
  },
  "author": "Sine Liu",
  "license": "ISC",
  "devDependencies": {
    "@types/animejs": "^3.1.0",
    "@types/body-parser": "^1.17.1",
    "@types/cheerio": "^0.22.15",
    "@types/command-line-args": "^5.0.0",
    "@types/express": "^4.17.2",
    "@types/he": "^1.1.0",
    "@types/highlight.js": "^9.12.3",
    "@types/js-yaml": "^3.12.1",
    "@types/marked": "^0.7.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.1.4",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/squirrelly": "^7.1.0",
    "@types/winston": "^2.4.4",
    "@types/yargs": "^15.0.1",
    "@uifabric/fluent-theme": "^7.1.4",
    "animejs": "^3.1.0",
    "css-loader": "^3.4.2",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "monaco-editor": "^0.19.2",
    "monaco-editor-webpack-plugin": "^1.8.2",
    "office-ui-fabric-react": "^7.82.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-monaco-editor": "^0.33.0",
    "shx": "^0.3.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typedoc": "^0.15.6",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "asciidoctor": "^2.0.3",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "he": "^1.2.0",
    "highlight.js": "^9.18.0",
    "js-yaml": "^3.13.1",
    "marked": "^0.8.0",
    "mathjax-full": "^3.0.0",
    "moment": "^2.24.0",
    "squirrelly": "^7.9.0",
    "viz.js": "^2.1.2",
    "winston": "^3.2.1",
    "wtf_wikipedia": "^7.8.1",
    "yargs": "^15.1.0"
  }
}
