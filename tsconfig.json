{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es5",
    "lib": ["ES2019"],
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "src/ui", "src/uibk"]
}
